<ul class="large-block-grid-4" id="search-results">
<% @lyrics.each do |l| %>
  <li>
    <p><%= highlight(l.body.gsub("\n", "<br />"), params[:q])  %></p>
    <h3>Interpretaciones</h3>
    <% l.lyric_occurences.each do |lo| %>
    <h4><%= lo.track.style %></h4>
    <h5><%= link_to lo.track.singer.name, artist_path(lo.track.singer) %></h5>
    <% end %>
  </li>
<% end %>
</ul>

